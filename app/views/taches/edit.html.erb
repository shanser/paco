<h1>Editing tache</h1>

<% form_for(@tache) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :commentaire %><br />
    <%= f.text_area :commentaire %>
  </p>
  <p>
    <%= f.label :poids %><br />
    <%= f.text_field :poids %>
  </p>
  <p>
    <%= f.label :statut %><br />
    <%= f.text_field :statut %>
  </p>
  <p>
    <%= f.label :date_entree %><br />
    <%= f.date_select :date_entree %>
  </p>
  <p>
    <%= f.label :date_sortie %><br />
    <%= f.date_select :date_sortie %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

