<h1>Listing taches</h1>
<table>
  <tr>
    <th>Id</th>
    <th>Description</th>
    <th>Commentaire</th>
    <th>Poids</th>
    <th>Statut</th>
    <th>Date entree</th>
    <th>Date sortie</th>
  </tr>

<% @taches.each do |tache| %>
  <tr>
    <td><%=h tache.id %></td>
    <td><%=h tache.description %></td>
    <td><%=h tache.commentaire %></td>
    <td><%=h tache.poids %></td>
    <td><%=h tache.statut %></td>
    <td><%=l tache.date_entree %></td>
    <td><%=l tache.date_sortie if tache.date_sortie %></td>
    <td><%= link_to 'Show', [:admin, tache] %></td>
    <td><%= link_to 'Edit', edit_admin_tache_path(tache) %></td>
    <td><%= link_to 'Destroy', [:admin, tache], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

