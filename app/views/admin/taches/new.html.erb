<h1>New tache</h1>

<% form_for(@tache, :url => admin_projet_taches_path) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :commentaire %><br />
    <%= f.text_area :commentaire %>
  </p>
  <p>
    <%= f.label :poids %><br />
    <%= f.text_field :poids %>
  </p>
  <p>
    <%= f.label :date_entree %><br />
    <%= f.date_select :date_entree %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_projet_path %>