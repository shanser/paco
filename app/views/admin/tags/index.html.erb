<h1>Listing tags</h1>

<table>
  <tr>
    <th>Description</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%=h tag.description %></td>
    <td><%= link_to 'Show', [:admin, tag] %></td>
    <td><%= link_to 'Edit', edit_admin_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', [:admin, tag], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tag', new_admin_tag_path %>